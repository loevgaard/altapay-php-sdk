{
    "name": "loevgaard/altapay-php-sdk",
    "type": "library",
    "description": "A PHP SDK for AltaPay",
    "keywords": [
        "loevgaard",
        "altapay"
    ],
    "homepage": "https://github.com/loevgaard/altapay-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk",
            "homepage": "http://www.loevgaard.dk"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.5||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\AltaPay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\AltaPay\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
